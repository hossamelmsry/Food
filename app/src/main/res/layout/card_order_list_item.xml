<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="100dp"
    android:layout_marginBottom="@dimen/space_5dp">

    <ImageView
        android:id="@+id/c_o_l_i_productImage"
        android:layout_width="@dimen/space_70dp"
        android:layout_height="@dimen/space_70dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/c_o_l_i_productName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/c_o_l_i_productImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/c_o_l_i_cartDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:drawablePadding="@dimen/space_5dp"
        app:layout_constraintStart_toEndOf="@id/c_o_l_i_productImage"
        app:layout_constraintTop_toBottomOf="@id/c_o_l_i_productName" />
</androidx.constraintlayout.widget.ConstraintLayout>