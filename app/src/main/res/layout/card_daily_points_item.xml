<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/space_80dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/c_d_p_i_image"
        android:layout_width="@dimen/space_70dp"
        android:layout_height="@dimen/space_70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_giftcard_gray" />

    <ImageView
        android:id="@+id/c_d_p_i_locker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/c_d_p_i_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/c_d_p_i_image"
        app:srcCompat="@drawable/ic_close_lock_gray" />

    <TextView
        android:id="@+id/c_d_p_i_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/c_d_p_i_locker" />
</androidx.constraintlayout.widget.ConstraintLayout>